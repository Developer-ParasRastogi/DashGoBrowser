<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentrelout"
    android:background="@drawable/back"
    tools:context=".SearchBarActivity">



    <!--Search Bar -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@null"
        tools:visibility="visible">

        <ImageView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="10"
            android:maxHeight="42dp"
            android:maxWidth="42dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo"

            />

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textIsSelectable="true"
            android:layout_marginTop="20dp"
            android:layout_weight="50"
            android:onClick="searchcurrent"

            android:background="@drawable/roundcorners"
            android:hint="Got More Thoughts ?"
            android:inputType="text"
            android:padding="10dip"
            android:selectAllOnFocus="true"
            android:textColor="#000"
            android:textColorHint="#000"


            />


    </LinearLayout>
    <!-- search bar ends-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="83dp"
        tools:ignore="WebViewLayout">


        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"

            android:layout_marginLeft="0dp"

            />


        <!-- navigation bar start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageButton
                android:id="@+id/backkey"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="30"
                android:onClick="backmethod"
                android:background="#fff"
                android:clickable="true"
                android:focusable="true"
                android:padding="10sp"
                android:src="@drawable/baseline_arrow_back_ios_black_18dp"
                android:text="Back"
                android:textColor="#000"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/forward"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="30"
                android:onClick="forwardmethod"
                android:background="#fff"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/baseline_arrow_forward_ios_black_18dp"
                android:text="forward"
                android:textColor="#000"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/menu"
                android:layout_width="0dp"

                android:layout_height="40dp"
                android:layout_weight="30"
                android:background="#fff"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/baseline_menu_black_18dp"
                android:text="menu"
                android:textColor="#000"
                android:visibility="visible" />


        </LinearLayout>
        <!--navigation bar ends-->


    </RelativeLayout>


</RelativeLayout>